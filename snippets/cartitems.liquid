<style>
  .cart img {
    width: 150px;
    height: 100px;
  }

  .my-cart__item {
    display: flex;
    gap: 10px;
    justify-content: space-between;
  }

  .acons {
    display: flex;
    align-items: center;
  }
  .acons a,
  .ctop a {
    text-decoration: none;
    background: black;
    color: white;
    margin: 0 5px;
    padding: 0 10px;
  }
  input[type='number'] {
    width: 30px;
    height: 19px;
    border: none;
    text-align: center;
    background: none;
  }
  .infos {
    min-width: 190px;
  }
</style>

<form action="{{ routes.cart_url }}" method="post">
  <div class="my-cart" data-ajax-cart-section>
    <b>
      Total Items: {{ cart.item_count }}
      <hr>
    </b>
    {% if cart.empty? %}
      <h2>Cart is Empty!</h2>
      <a href="/collections/all">
        <h3>Continue Shopping...</h3>
      </a>
    {% else %}
      {% for item in cart.items %}
        <div class="my-cart__item">
          <a href="{{ item.url }}"> <img src="{{ item.image | image_url: width: 150 }}" alt="{{ item.title }}"> </a>
          <div class="infos">
            <a href="{{ item.url }}"
              ><b>{{ item.title }}</b></a
            >

            <div>Unit Price: {{ item.final_price | money }}</div>

            <div class="acons">
              <a
                data-ajax-cart-request-button
                href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity={{ item.quantity | minus: 1 }}"
              >
                -
              </a>
              <input
                data-ajax-cart-quantity-input="{{ forloop.index }}"
                value="{{ item.quantity }}"
                name="updates[]"
                type="number"
              >
              <a
                data-ajax-cart-request-button
                href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity={{ item.quantity | plus: 1 }}"
              >
                +
              </a>
              <a
                data-ajax-cart-request-button
                href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
              >
                x
              </a>
            </div>
          </div>
        </div>
        <hr>
      {% endfor %}
      <button type="submit" name="checkout">
        <b>Checkout â€” {{ cart.total_price | money_with_currency }}</b>
      </button>
    {% endif %}
  </div>
</form>
