<style>
  .mozik {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    grid-auto-rows: minmax(100px, auto);
    width: 94%;
    margin: 0 auto;
  }
  .mozik .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  @media only screen and (max-width: 650px) {
    .mozik {
      grid-template-columns: repeat(1, 1fr);
    }
  }
  .item_info {
    display: flex;
    text-align: center;
    margin: 10% 0;
    background: #00000080;
    flex-direction: column;
    width: 60%;
    align-items: center;
    flex-wrap: wrap;
    padding: 5% 0;
    color: white;
  }
  .item_info button {
    font-size: 20px;
    padding: 5px 40px;
    border: 2px solid white;
    color: white;
  }
  .item_info button:hover {
    background: white;
    color: black;
  }
  .y_video {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .y_video {
    position: relative;
    overflow: hidden;
    width: 100%;
    padding-top: 56.25%;
  }

  .y_frame {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }
  .item:hover .item_info {
    transform: scale(1.2);
  }
</style>

<h2 style="
        font-size: revert;
      text-align: center;
      border: 1px solid;
      width: 94%;
      margin: 20px auto;
      ">{{ section.settings.sec_title }}</h2>

<div class="mozik">
  {% for block in section.blocks %}
    <div class="item" style="
                background-image: url('{{block.settings.image_picker | img_url: 'large' }}');
                background-repeat: no-repeat;
                background-size: cover;
                ">
      <div class="item_info">
        <h3 style="
                font-size: revert;
              text-align: center;
              border: 1px solid;
              width: 94%;
              margin: 20px auto;
              ">{{ block.settings.title }}</h3>
        <p>{{ block.settings.p_txt }}</p>
        <a href="{{ block.settings.link }}">
          <button>{{ block.settings.btn_txt }}</button>
        </a>
      </div>
    </div>
  {% endfor %}

  <div class="y_video">
    <iframe
      allow="fullscreen;"
      class="y_frame"
      src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=1&showinfo=0&controls=1&rel=0&modestbranding=1"></iframe>
  </div>

</div>

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "text",
        "id": "sec_title",
        "label": "Title"
      }, {
        "type": "video_url",
        "id": "video_url",
        "accept": ["youtube"],
        "label": "Video",
        "default": "https://www.youtube.com/watch?v=QC8iQqtG0hg"
      }
    ],
    "max_blocks": 3,
    "blocks": [
      {
        "type": "text",
        "name": "Mozik",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_picker",
            "label": "Upload Background"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "p_txt",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "btn_txt",
            "label": "Button Text"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Mozik",
        "name": "Mozik"
      }
    ]
  }
{% endschema %}